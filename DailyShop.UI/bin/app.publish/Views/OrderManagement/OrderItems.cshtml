@model IEnumerable<DailyShop.Main.Models.TrollyOrderItem>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderQuantity)
        </th>
        <th>Line Total</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderQuantity)
        </td>
        <td>
            @String.Format("{0:c}", item.Price*item.OrderQuantity) 
        </td>
    </tr>
}
    <tr>
        <td colspan="3" style="text-align:right">
            <strong>
                Order Total
            </strong>
        </td>
        <td>
            @String.Format("{0:c}", (from p in Model select p.OrderQuantity*p.Price).Sum())
        </td>
    </tr>

</table>
